@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<div class="container h-100 d-flex align-items-center justify-content-center py-5">
    <div class="card shadow border-0 w-100" style="max-width: 600px;">
        <div class="card-header bg-dark text-white text-center py-3">
            <h2 class="m-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body p-4">
            <p class="text-center mb-4">
                You have requested to log in with a recovery code. This login will not be remembered until you provide
                an authenticator app code at log in or disable 2FA and log in again.
            </p>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-4">
                    <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="RecoveryCode" />
                    <label asp-for="Input.RecoveryCode"></label>
                    <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 py-2">Log in</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
