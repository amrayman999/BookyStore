@page
@model RegisterModel

<div class="container h-100 d-flex align-items-center justify-content-center py-5">
    <div class="card shadow border-0 w-100" style="max-width: 900px;">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="card-header bg-dark text-white text-center py-3">
                @if(User.IsInRole(SD.Role_Admin))
                {
                    <h2 class="text-uppercase m-0">Register - Admin Portal</h2>
                }
                else
                {
                    <h2 class="text-uppercase m-0">Register</h2>
                }
            </div>
            <div class="card-body p-4">
                <h4 class="text-center text-secondary border-bottom pb-3 mb-4">Create a new account</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="row g-3">
                    <div class="form-floating col-md-12">
                        <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-6">
                        <input asp-for="Input.Name" class="form-control" />
                        <label asp-for="Input.Name">Name</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-6">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-6">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-6">
                        <input asp-for="Input.StreetAddress" class="form-control" />
                        <label asp-for="Input.StreetAddress">Street Address</label>
                        <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-6">
                        <input asp-for="Input.City" class="form-control" />
                        <label asp-for="Input.City">City</label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-6">
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <label asp-for="Input.PhoneNumber">Phone Number</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-6">
                        <input asp-for="Input.PostalCode" class="form-control" />
                        <label asp-for="Input.PostalCode">Postal Code</label>
                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-md-6">
                        <input asp-for="Input.State" class="form-control" />
                        <label asp-for="Input.State">State</label>
                        <span asp-validation-for="Input.State" class="text-danger"></span>
                    </div>
                    @if(User.IsInRole(SD.Role_Admin))
                    {
                    <div class="form-floating col-md-6">
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                            <option disabled selected>-Select Role-</option>
                        </select>
                        <label asp-for="Input.Role">Role</label>
                    </div>
                    <div class="form-floating col-md-6">
                        <select asp-for="Input.CompanyId" asp-items="@Model.Input.CompanyList" class="form-select" style="display:none">
                            <option disabled selected>-Select Company-</option>
                        </select>
                        <label asp-for="Input.CompanyId">Company</label>
                    </div>
                    }

                </div>
                <div class="mt-4">
                    <button id="registerSubmit" type="submit" class="btn btn-primary w-100 py-2">Register</button>
                </div>
            </div>
        </form>
        @if(!User.IsInRole(SD.Role_Admin))
        {
            <div class="card-footer text-center p-3">
                <p class="mb-2">or</p>
                @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div class="alert alert-info">
                        No external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">this article</a> to configure them.
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-primary m-1" name="provider" value="@provider.Name">
                                @provider.DisplayName
                            </button>
                        }
                    </form>
                }
            </div>

        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#Input_Role').change(function () {
                var selection = $('#Input_Role option:selected').text();
                if (selection === 'Company') {
                    $('#Input_CompanyId').show();
                } else {
                    $('#Input_CompanyId').hide();
                }
            });
        });
    </script>
}
