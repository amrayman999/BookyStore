@page
@model LockoutModel
@{
    ViewData["Title"] = "Locked out";
}

<div class="container h-100 d-flex align-items-center justify-content-center py-5">
    <div class="card shadow border-0 w-100" style="max-width: 600px;">
        <div class="card-header bg-danger text-white text-center py-3">
            <h2 class="m-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body p-4 text-center">
            <p class="text-danger fs-5">This account has been locked out, please try again later.</p>
        </div>
    </div>
</div>