
<div class="container h-100 d-flex flex-column align-items-center justify-content-start">
    <div class="card shadow border-0 w-100" style="max-width: 1000px;">
        <div class="card-header bg-dark text-white py-3 text-center">
            <h2 class="m-0">Company List</h2>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-6"></div>
                <div class="col-6 text-end">
                    <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Company
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table id="tblData" class="table table-sm table-bordered table-striped align-middle text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>City</th>
                            <th>State</th>
                            <th>Phone Number</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Populated dynamically by JS -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}
