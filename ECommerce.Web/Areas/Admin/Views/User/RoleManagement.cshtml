@model RoleManagementVM

<div class="container h-100 d-flex align-items-center justify-content-center">
    <div class="card shadow border-0 w-100" style="max-width: 600px;">
        <div class="card-header bg-dark text-white py-3 text-center">
            <h2 class="m-0">Manage User Role</h2>
        </div>
        <div class="card-body p-4">
            <form method="post" class="w-100">
                <input asp-for="ApplicationUser.Id" hidden />
                <div class="form-floating mb-3">
                    <input asp-for="ApplicationUser.Name" readonly class="form-control shadow-sm" />
                    <label asp-for="ApplicationUser.Name"></label>
                    <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                     <select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select"></select>
                </div>
                @{
                    var companyVisible = "display:none;";
                }
                @if (Model.ApplicationUser.Role == SD.Role_Company)
                {
                    companyVisible = "display:block;";
                }
                <div class="form-floating mb-3">
                    <select asp-for="ApplicationUser.CompanyId" style="@companyVisible" asp-items="@Model.CompanyList" class="form-select"></select>
                </div>
                <div class="row g-2">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary w-100">Update Role</button>
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-outline-primary w-100">
                            Back To List
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
    <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('#ApplicationUser_Role').change(function () {
                var selection = $('#ApplicationUser_Role option:selected').text();
                if (selection === 'Company') {
                    $('#ApplicationUser_CompanyId').show();
                } else {
                    $('#ApplicationUser_CompanyId').hide();
                }
            });
        });
    </script>
}


