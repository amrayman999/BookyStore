@model List<Product>

<div class="container h-100 d-flex align-items-center justify-content-center">
    <div class="card shadow border-0 w-100" style="max-width: 1200px;">
        <div class="card-header bg-dark text-white py-3 text-center">
            <h2 class="m-0">Product List</h2>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-6">
                    <!-- Left space reserved -->
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Product
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table id="tblData" class="table table-sm table-bordered table-striped border">
                    <thead class="table-dark">
                        <tr>
                            <th>Title</th>
                            <th>ISBN</th>
                            <th>Price</th>
                            <th>Author</th>
                            <th>Category</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}
