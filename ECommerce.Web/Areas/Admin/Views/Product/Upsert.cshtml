@model ProductVM

<div class="container h-100 d-flex align-items-center justify-content-center">
    <div class="card shadow border-0 w-100" style="max-width: 1000px;">
        <div class="card-header bg-dark text-white py-3 text-center">
            <h2 class="m-0">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
        </div>
        <div class="card-body p-4">
            <form method="post" enctype="multipart/form-data">
                <input asp-for="Product.Id" type="hidden" />
                <div class="row g-4">
                    <div class="col-lg-10">
                        <div class="form-floating mb-3">
                            <input asp-for="Product.Title" class="form-control shadow-sm" />
                            <label asp-for="Product.Title"></label>
                            <span asp-validation-for="Product.Title" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Product.Description" class="form-control shadow-sm" />
                            <label asp-for="Product.Description"></label>
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Product.ISBN" class="form-control shadow-sm" />
                            <label asp-for="Product.ISBN"></label>
                            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Product.Author" class="form-control shadow-sm" />
                            <label asp-for="Product.Author"></label>
                            <span asp-validation-for="Product.Author" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Product.ListPrice" class="form-control shadow-sm" />
                            <label asp-for="Product.ListPrice"></label>
                            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Product.Price" class="form-control shadow-sm" />
                            <label asp-for="Product.Price"></label>
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Product.Price50" class="form-control shadow-sm" />
                            <label asp-for="Product.Price50"></label>
                            <span asp-validation-for="Product.Price50" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Product.Price100" class="form-control shadow-sm" />
                            <label asp-for="Product.Price100"></label>
                            <span asp-validation-for="Product.Price100" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select shadow-sm">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for="Product.CategoryId"></label>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="file" name="files" class="form-control shadow-sm" multiple/>
                            <label asp-for="Product.ProductImages" class="ms-2"></label>
                        </div>
                        <div class="row g-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary w-100">
                                    @(Model.Product.Id != 0 ? "Update" : "Create")
                                </button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary w-100">
                                    Back To List
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-2 text-center">
                        @if(Model.Product.ProductImages != null)
                        {
                            foreach(var image in Model.Product.ProductImages)
                            {
                                <div class="border p-1 m-2 text-center">
                                    <img src="@image.ImageUrl" class="img-fluid rounded border" />
                                    <a asp-action="DeleteImage" class="btn btn-danger" asp-route-imageId="@image.Id">
                                        <i class="bg-info bi-trash-fill"></i>Delete
                                    </a>
                                </div>
                            }
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
