@model int

<div class="container h-100 d-flex align-items-center justify-content-center">
    <div class="card shadow border-0 w-100" style="max-width: 800px;">
        <div class="card-header bg-dark text-white py-3 text-center">
            <h2 class="m-0">Order Confirmation</h2>
        </div>
        <div class="card-body p-5 text-center">
            <h3 class="text-success mb-4">Order Placed Successfully!</h3>
            <p class="fs-5">Your Order Number is: <strong>@Model</strong></p>
            <img src="~/images/orderconfirm.png" class="img-fluid rounded my-4" style="max-width: 65%;" />
            <p class="text-maroon fw-semibold">Your Order Has Been Placed Successfully!</p>
        </div>
    </div>
</div>
