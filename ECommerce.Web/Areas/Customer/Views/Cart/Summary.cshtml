@model ShoppingCartVM

<div class="container h-100 d-flex align-items-center justify-content-center">
    <div class="card shadow border-0 w-100" style="max-width: 1000px;">
        <form method="post">
            <div class="card-header bg-dark text-white py-3 text-center">
                <h2 class="m-0">Order Summary</h2>
            </div>

            <div class="card-body p-4">
                <div class="row g-4">
                    <div class="col-lg-6">
                        <h4 class="text-info mb-3">Shipping Details</h4>

                        <div class="form-floating mb-3">
                            <input asp-for="OrderHeader.name" class="form-control shadow-sm" />
                            <label asp-for="OrderHeader.name"></label>
                            <span asp-validation-for="OrderHeader.name" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="OrderHeader.PhoneNumber" class="form-control shadow-sm" />
                            <label asp-for="OrderHeader.PhoneNumber"></label>
                            <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="OrderHeader.StreetAddress" class="form-control shadow-sm" />
                            <label asp-for="OrderHeader.StreetAddress"></label>
                            <span asp-validation-for="OrderHeader.StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="OrderHeader.City" class="form-control shadow-sm" />
                            <label asp-for="OrderHeader.City"></label>
                            <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="OrderHeader.State" class="form-control shadow-sm" />
                            <label asp-for="OrderHeader.State"></label>
                            <span asp-validation-for="OrderHeader.State" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="OrderHeader.PostalCode" class="form-control shadow-sm" />
                            <label asp-for="OrderHeader.PostalCode"></label>
                            <span asp-validation-for="OrderHeader.PostalCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <h4 class="text-info mb-3">Order Summary</h4>
                        <ul class="list-group mb-3">
                            @foreach (var details in Model.ShoppingCartList)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <div>
                                        <h6 class="my-0">@details.Product.Title</h6>
                                        <small class="text-muted">Quantity: @details.Count</small>
                                    </div>
                                    <span class="text-muted">@((details.Price * details.Count).ToString("c"))</span>
                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <strong>Total (USD)</strong>
                                <strong class="text-info">@Model.OrderHeader.OrderTotal.ToString("c")</strong>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-white">
                <div class="row g-3 align-items-center">
                    <div class="col-md-8">
                        <p class="text-maroon m-0" style="font-size: 14px;">
                            Estimate Arrival Date:
                            @DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()
                        </p>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <button type="submit" class="btn btn-primary w-100 py-2">Place Order</button>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col text-center">
                        <a asp-action="Index" class="btn btn-outline-danger btn-sm">Back to Cart</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
