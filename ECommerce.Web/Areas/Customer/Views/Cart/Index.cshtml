@model ShoppingCartVM

<div class="container h-100 d-flex align-items-center justify-content-center">
    <div class="card shadow border-0 w-100" style="max-width: 1000px;">
        <form method="post">
            <div class="card-header bg-dark text-white py-3 text-center">
                <h2 class="m-0">Shopping Cart</h2>
            </div>

            <div class="card-body p-4">
                <div class="row mb-4">
                    <div class="col-md-2 offset-md-1">
                        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary text-uppercase btn-sm w-100">
                            Continue Shopping
                        </a>
                    </div>
                </div>

                <div class="row px-3">
                    @foreach (var item in Model.ShoppingCartList)
                    {
                        <div class="row border-bottom pb-3 mb-3">
                            <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                @if (item.Product.ProductImages != null && item.Product.ProductImages.Count() > 0)
                                {
                                    <img src="@item.Product.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top rounded-0 w-100 h-100" style="object-fit: cover; max-height: 300px;" />
                                }
                                else
                                {
                                    <img src="https://placehold.co/500x600/png" class="card-img-top rounded-0 w-100 h-100" style="object-fit: cover; max-height: 300px;" />
                                }
                            </div>
                            <div class="col-12 col-lg-6 pt-md-3">
                                <h5 class="text-uppercase text-secondary fw-bold">@item.Product.Title</h5>
                                <p class="mb-1"><small>@item.Product.Description</small></p>
                            </div>
                            <div class="col-12 col-lg-5 row text-center">
                                <div class="col-3 pt-2 pt-md-4">
                                    <h6 class="fw-semibold">
                                        @item.Price.ToString("c")
                                        <span class="text-muted">&nbsp;x&nbsp;</span>@item.Count
                                    </h6>
                                </div>
                                <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                    <div class="btn-group w-75" role="group">
                                        <a asp-action="plus" asp-route-cartId="@item.Id" class="btn btn-outline-primary py-2">
                                            <i class="bi bi-plus-square"></i>
                                        </a>
                                        <a asp-action="minus" asp-route-cartId="@item.Id" class="btn btn-outline-primary py-2">
                                            <i class="bi bi-dash-square"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 pt-2">
                                    <a asp-action="remove" asp-route-cartId="@item.Id" class="btn btn-danger py-2">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="row mt-4">
                    <div class="col-md-4 offset-md-4">
                        <ul class="list-group mb-4">
                            <li class="d-flex justify-content-between align-items-center">
                                <h5 class="text-uppercase text-dark fw-semibold">Total (USD)</h5>
                                <h4 class="text-dark fw-bolder">@Model.OrderHeader.OrderTotal.ToString("c")</h4>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2 offset-md-5">
                        <a asp-action="Summary" class="btn btn-primary w-100 py-2">
                            Summary
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
